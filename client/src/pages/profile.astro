---
import Navbar from '../components/top-navigation.astro';
import Head from '../components/head.astro';
import Scripts from '../components/scripts.astro';
---

<html lang="en">
	<Head title="Home"></Head>
	<body style="background-color: #F8F8F8;" onload="fetchUserDetails();">
		<!-- Include top navigation here -->
		<Navbar></Navbar>
		<div class="container-fluid">
            <div class="card h-100">
                <div class="row">
                    <div class="mt-2 ml-5"><a href="../index.html">Home</a> &gt; Profile</div>
                </div>
                <div id="userInfo">
                </div>
                <div class="row mx-auto">
                    <button style="width: 130px" class="form-control bg-warning border-0 mt-3 mx-1">
                        <a href="./editPersonalDetails.html" class="text-white" style="text-decoration: none;"><i class="fas fa-edit"></i> Edit profile
                        </a>
                    </button>
                    <button style="width: 100px" class="form-control bg-danger border-0 mt-3 mx-1 text-white" onclick="deleteUser()">
                        <i class="fa-solid fa-user-xmark"></i> Delete account
                    </button>
                </div>
            </div>
		</div>
	</body>
	<script>
        loginStatus();
        changeActiveNavItem("Profile");
	</script>
	<Scripts></Scripts>
</html>
